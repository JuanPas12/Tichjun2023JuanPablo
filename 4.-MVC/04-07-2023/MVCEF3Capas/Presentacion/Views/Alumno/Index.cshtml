@model IEnumerable<Entidades.Alumnos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Alumnos</h2>

<p>
    @Html.ActionLink("Agregar", "Create", null, htmlAttributes: new { @class = "btn btn-primary fw-bold" })
</p>
<table class="table table-hover">
    <tr>
        <td>
            ID
        </td>
        <th>
            Nombre
        </th>
        <th>
            Primer Apellido
        </th>
        <th>
            Segundo Apellido
        </th>
        <th>
            Correo
        </th>
        <th>
            Telefono
        </th>
        <th>
            Estado
        </th>
        <th>
            Estatus
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.segundoaPellido)
            </td>
            <td>
                <a href="mailto:@item.correo" class="correo-enlace">@item.correo</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estados.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstatusAlumnos.nombre)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.id }, htmlAttributes: new { @class = "btn btn-warning text-white fw-bold btn-sm" })
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-success fw-bold btn-sm" })
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger fw-bold btn-sm" })
            </td>
        </tr>
    }

</table>

<style>
    .correo-enlace {
        color: black;
        text-decoration: none;
    }
</style>

